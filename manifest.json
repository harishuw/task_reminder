{
    "name": "Task Reminder",
    "short_name":"TR v2.2",
    "version": "2.2",
    "manifest_version": 2,
    "author":"Harish U Warrier",
    "description": "A Simple Task Reminder",
    "icons": { 
        "48": "icon.png" 
    },
    "background": {
        "persistent": true,
        "scripts": ["bg.js"]       
    },
    "permissions": ["storage", "notifications", "alarms"],
    "browser_action": {
        "default_title": "Task Reminder",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}